pipeline {
    agent any

      environment {
      SONAR_TOKEN = withCredentials('SONAR_TOKEN')
}
    tools { 
        maven 'maven'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-repo/your-node-app.git'
            }
        }
        stage('CompileandRunSonarAnalysis') {
            steps {	
                sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=asgbuggywebapp -Dsonar.organization=asgbuggywebapp -Dsonar.host.url=https://sonarcloud.io -Dsonar.token=93f470b908a46156f5844'
            } 
        }
    }
}